{% extends './layout.njk' %}

{% block content %}
<div class="divForm">
  <h1 class="headForm">Fill the form with the parameters to search applicants with</h1>
  <form method="GET">
    <input
        class="apply"
        type="text"
        name="name"
        placeholder="Name of applicant"
        required
    />
    <input
        class="apply"
        type="text"
        name="applicationDate"
        placeholder="Application date"
        required
    />
    <input
        class="apply"
        type="text"
        name="fromDate"
        patter="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])"
        placeholder="From yyyy-mm-dd"
    />
    <input
        class="apply"
        type="text"
        name="toDate"
        patter="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])"
        placeholder="To yyyy-mm-dd"
    />
    <select class="apply" id="#">
      <option value="">---</option>
      <option value="exp2">exp1</option>
      <option value="exp3">exp2</option>
      <option value="exp4">exp3</option>
      <option value="exp5">exp4</option>
    </select>
  </form>
  <button class="logReg">Done</button>
</div>

{% endblock %}
