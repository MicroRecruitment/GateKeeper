{% extends './layout.njk' %}

{% block content %}
<div class="divForm">
  <h1 class="headForm">To apply for a job, fill the form</h1>
  <form id="main">
    <fieldset class="f1">
      <select class="apply" id="#" required>
        <option value="exp1">exp1</option>
        <option value="exp2">exp2</option>
        <option value="exp3">exp3</option>
        <option value="exp4">exp4</option>
      </select>
      <input
          class="apply"
          type="text"
          name="experience"
          id="#"
          placeholder="Years of experience"
          required
      />
    </fieldset>
    <button id="b1" class="another">+</button>

    <fieldset class="f2">
      <input
          class="apply"
          type="text"
          name="fromDate"
          patter="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])"
          id="#"
          placeholder="Available from yyyy-mm-dd"
          required
      />
      <input
          class="apply"
          type="text"
          name="toDate"
          patter="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])"
          id="#"
          placeholder="Available to yyyy-mm-dd"
          required
      />
    </fieldset>
    <button id="b2" class="another">+</button>

  </form>
  <button class="logReg">Done</button>
</div>

<script>
  $('#b1').on('click', function (event) {
    event.preventDefault()
    $('.f1').append('<select class="apply" id="#" required><option value="exp1">exp1</option> <option value="exp2">exp2</option><option value="exp3">exp3</option><option value="exp4">exp4</option></select> ');
    $('.f1').append('<input class="apply" type="text" name="experience" id="#" placeholder="Years of experience" required /> ');
  })
</script>
{% endblock %}
