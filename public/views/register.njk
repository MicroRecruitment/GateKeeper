{% extends './layout.njk' %}

{% block content %}
    <div class="form">
        <form id="register" class="loginForm" method="POST">
            <input
                type="text"
                name="name"
                placeholder="Forename"
                pattern="^[a-zA-ZåäöÅÄÖ]{2,20}$"
                required
                />
            <input
                type="text"
                name="surname"
                placeholder="Surname"
                pattern="^[a-zA-ZåäöÅÄÖ]{2,20}$"
                required
                />
            <input
                type="text"
                name="ssn"
                placeholder="Social Security Number"
                pattern="^\d{6,8}[-|(\s)]{0,1}\d{4}$"
                required
                />
            <input
                type="text"
                name="email"
                placeholder="Email"
                required
                />
            <input
                type="text"
                name="username"
                placeholder="Username"
                pattern="^[a-zA-ZåäöÅÄÖ]{1,255}$"
                required
                />
            <input
                type="password"
                name="password"
                placeholder="Password"
                required
                />
            <button id="reg">REGISTER</button>
        </form>
    </div>
    <script>
        var socket = io();
        $('form#register').on('submit', function (evt) {
            evt.preventDefault();
            console.log('Websocket -> Gateway (Register)');
            var form_data = $('#register').serializeArray();
            console.log(form_data);
            return;
            socket.emit('APPLICANT::REGISTER', form_data, function(reply) {
                  console.log(reply);
            });
            return false;
        });
    </script>
{% endblock %}
