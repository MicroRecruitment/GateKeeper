{% extends './layout.njk' %}

{% block content %}
    <div class="divForm">
        <form id="register" class="loginForm" method="POST">
            <input
                class="logReg"
                type="text"
                name="name"
                placeholder="Forename"
                pattern="^[a-zA-ZåäöÅÄÖ]{2,20}$"
                required
                value="Test"
                />
            <input
                class="logReg"
                type="text"
                name="surname"
                placeholder="Surname"
                pattern="^[a-zA-ZåäöÅÄÖ]{2,20}$"
                required
                value="Testsson"
                />
            <input
                class="logReg"
                type="text"
                name="ssn"
                placeholder="Social Security Number"
                pattern="^\d{6,8}[-|(\s)]{0,1}\d{4}$"
                required
                value="20200120-1234"
                />
            <input
                class="logReg"
                type="text"
                name="email"
                placeholder="Email"
                required
                value="test@domain.com"
                />
            <input
                class="logReg"
                type="text"
                name="username"
                placeholder="Username"
                pattern="^[a-zA-ZåäöÅÄÖ]{1,255}$"
                required
                value="test"
                />
            <input
                class="logReg"
                type="password"
                name="password"
                placeholder="Password"
                required
                value="test"
                />
            <button class="logReg" id="reg">REGISTER</button>
        </form>
    </div>
    <script>
        var socket = io();
        $('form#register').on('submit', function (evt) {
            evt.preventDefault();
            console.log('Websocket -> Gateway (Register)');

            var formData = new FormData(document.getElementById("register"));
            var object = {};
            formData.forEach((value, key) => {object[key] = value});

            console.log(object);

            socket.emit('APPLICANT::REGISTER', object, function(reply) {
                  console.log(reply);
            });
            return false;
        });
    </script>
{% endblock %}
